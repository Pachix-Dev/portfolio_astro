---
import { getMessages } from '@/i18n/ui'

export interface Props {
  locale?: string
}

const { locale } = Astro.props
const t = getMessages(locale)
---

<section
  class='max-w-6xl mx-auto grid md:grid-cols-2 gap-20 px-4'
  aria-label='About me'
>
  <div class='grid gap-4'>
    <div class='rounded-2xl shadow-2xl bg-[#04142B] px-10 py-5 space-y-4'>
      <div class='text-purple-600 flex justify-between gap-2 items-center'>
        <span class='text-xl font-bold'>{t.cloudarchitecture}</span>
        <svg
          xmlns='http://www.w3.org/2000/svg'
          fill='none'
          viewBox='0 0 24 24'
          stroke-width='1.5'
          stroke='currentColor'
          class='size-6'
        >
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            d='M8.25 3v1.5M4.5 8.25H3m18 0h-1.5M4.5 12H3m18 0h-1.5m-15 3.75H3m18 0h-1.5M8.25 19.5V21M12 3v1.5m0 15V21m3.75-18v1.5m0 15V21m-9-1.5h10.5a2.25 2.25 0 0 0 2.25-2.25V6.75a2.25 2.25 0 0 0-2.25-2.25H6.75A2.25 2.25 0 0 0 4.5 6.75v10.5a2.25 2.25 0 0 0 2.25 2.25Zm.75-12h9v9h-9v-9Z'
          ></path>
        </svg>
      </div>
      <p class='text-gray-400'>
        {t.cloud_description}
      </p>
    </div>
    <div class='rounded-2xl shadow-2xl bg-[#04142B] px-10 py-5 space-y-4'>
      <div class='text-purple-600 flex justify-between gap-2 items-center'>
        <span class='text-xl font-bold'>{t.webdevelopment}</span>
        <svg
          xmlns='http://www.w3.org/2000/svg'
          fill='none'
          viewBox='0 0 24 24'
          stroke-width='1.5'
          stroke='currentColor'
          class='size-6'
        >
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            d='M14.25 9.75 16.5 12l-2.25 2.25m-4.5 0L7.5 12l2.25-2.25M6 20.25h12A2.25 2.25 0 0 0 20.25 18V6A2.25 2.25 0 0 0 18 3.75H6A2.25 2.25 0 0 0 3.75 6v12A2.25 2.25 0 0 0 6 20.25Z'
          ></path>
        </svg>
      </div>
      <p class='text-gray-400'>
        {t.webdev_description}
      </p>
    </div>
    <div class='rounded-2xl shadow-2xl bg-[#04142B] px-10 py-5 space-y-4'>
      <div class='text-purple-600 flex justify-between gap-2 items-center'>
        <span class='text-xl font-bold'>{t.problemsolving}</span>
        <svg
          xmlns='http://www.w3.org/2000/svg'
          fill='none'
          viewBox='0 0 24 24'
          stroke-width='1.5'
          stroke='currentColor'
          class='size-6'
        >
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            d='M12 18v-5.25m0 0a6.01 6.01 0 0 0 1.5-.189m-1.5.189a6.01 6.01 0 0 1-1.5-.189m3.75 7.478a12.06 12.06 0 0 1-4.5 0m3.75 2.383a14.406 14.406 0 0 1-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 1 0-7.517 0c.85.493 1.509 1.333 1.509 2.316V18'
          ></path>
        </svg>
      </div>
      <p class='text-gray-400'>
        {t.problem_solving_description}
      </p>
    </div>
  </div>
  <div>
    <h2 class='text-gray-500 font-medium'>{t.aboutme}</h2>
    <article class='mt-4 space-y-4 leading-7 text-gray-300'>
      <p class='text-3xl font-bold'>{t.iam}</p>
      <p class='italic font-semibold'>{t.aboutParagraph1}</p>
      <p class='font-medium text-gray-500'>
        {t.aboutParagraph2}
        {t.aboutParagraph3}
      </p>
    </article>
  </div>
</section>
