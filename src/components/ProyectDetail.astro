---
import { render, type CollectionEntry } from 'astro:content'
import ProyectScore from './ProyectScore.astro'
import { getMessages, normalizeLocale, type AppLocale } from '../i18n/ui'

interface Props {
  proyect: CollectionEntry<'proyects'>
  locale?: AppLocale
}

const { proyect } = Astro.props
const locale = normalizeLocale(Astro.props.locale ?? Astro.currentLocale)
const copy = getMessages(locale)

const { data, slug } = proyect
const {
  title,
  description,
  image,
  link,
  repo,
  tags,
  featured,
  date,
  role,
  technologies,
  highlights,
} = data

const { Content } = await render(proyect)
const routeId = slug.replace(`${locale}/`, '')

const homeLink = locale === 'es' ? '/' : '/en/'
const homeProjectsLink = `${homeLink}#${routeId}`

const formattedDate = date
  ? new Date(date).toLocaleDateString(locale === 'en' ? 'en-US' : 'es-MX', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    })
  : null
---

<main
  class='min-h-screen bg-linear-to-b from-gray-900 via-gray-800 to-gray-900'
>
  <section class='relative overflow-hidden'>
    <div
      class='absolute inset-0 bg-linear-to-r from-purple-600/20 to-blue-600/20 blur-3xl'
    >
    </div>
    <div class='relative max-w-6xl mx-auto px-4 py-16 sm:py-24'>
      <nav class='mb-8'>
        <a
          href={homeProjectsLink}
          class='text-gray-400 hover:text-white transition-colors inline-flex items-center gap-2'
        >
          <svg
            xmlns='http://www.w3.org/2000/svg'
            class='h-4 w-4'
            fill='none'
            viewBox='0 0 24 24'
            stroke='currentColor'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              d='M10 19l-7-7m0 0l7-7m-7 7h18'></path>
          </svg>
          {copy.backToHome}
        </a>
      </nav>

      <div class='text-center mb-12'>
        {
          featured && (
            <span class='inline-block px-4 py-1 mb-4 text-sm font-medium text-yellow-400 bg-yellow-400/10 rounded-full border border-yellow-400/20'>
              {copy.featuredProject}
            </span>
          )
        }
        <h1
          transition:name={`title-${routeId}`}
          class='text-4xl sm:text-5xl lg:text-6xl font-extrabold text-white mb-4 leading-tight'
        >
          {title}
        </h1>
        <p class='text-xl text-gray-300 max-w-3xl mx-auto'>{description}</p>

        <div
          class='flex flex-wrap justify-center gap-4 mt-6 text-sm text-gray-400'
        >
          {
            role && (
              <span class='flex items-center gap-2'>
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  class='h-4 w-4'
                  fill='none'
                  viewBox='0 0 24 24'
                  stroke='currentColor'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z'
                  />
                </svg>
                {role}
              </span>
            )
          }
          {
            formattedDate && (
              <span class='flex items-center gap-2'>
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  class='h-4 w-4'
                  fill='none'
                  viewBox='0 0 24 24'
                  stroke='currentColor'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z'
                  />
                </svg>
                {formattedDate}
              </span>
            )
          }
        </div>
        <div class='mt-4'>
          <ProyectScore server:defer label={copy.scoreLabel}>
            <span slot='fallback' class='text-lg text-white' id='score'>
              {copy.scoreLabel}: {copy.scoreLoading}
            </span>
          </ProyectScore>
        </div>
      </div>

      <div class='flex flex-wrap justify-center gap-4 mb-12'>
        {
          link && (
            <a
              href={link}
              target='_blank'
              rel='noopener noreferrer'
              class='inline-flex items-center gap-2 px-6 py-3 bg-linear-to-r from-purple-600 to-blue-600 text-white font-semibold rounded-lg hover:from-purple-700 hover:to-blue-700 transition-all shadow-lg hover:shadow-purple-500/25'
            >
              <svg
                xmlns='http://www.w3.org/2000/svg'
                class='h-5 w-5'
                fill='none'
                viewBox='0 0 24 24'
                stroke='currentColor'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14'
                />
              </svg>
              {copy.viewProject}
            </a>
          )
        }
        {
          repo && (
            <a
              href={repo}
              target='_blank'
              rel='noopener noreferrer'
              class='inline-flex items-center gap-2 px-6 py-3 bg-gray-800 text-white font-semibold rounded-lg border border-gray-700 hover:bg-gray-700 hover:border-gray-600 transition-all'
            >
              <svg
                xmlns='http://www.w3.org/2000/svg'
                class='h-5 w-5'
                fill='currentColor'
                viewBox='0 0 24 24'
              >
                <path d='M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z' />
              </svg>
              {copy.viewCode}
            </a>
          )
        }
      </div>

      {
        image && (
          <div class='relative rounded-2xl overflow-hidden shadow-2xl shadow-black/50 border border-gray-700/50'>
            <img
              transition:name={`img-${routeId}`}
              src={image}
              alt={`${copy.screenshotOf}: ${title}`}
              class='w-full h-auto object-cover'
            />
            <div class='absolute inset-0 bg-linear-to-t from-gray-900/50 to-transparent pointer-events-none' />
          </div>
        )
      }
    </div>
  </section>

  <section class='max-w-4xl mx-auto px-4 py-16'>
    <div class='grid gap-12 lg:grid-cols-3'>
      <article
        class='lg:col-span-2 prose prose-lg prose-invert prose-purple max-w-none'
      >
        <Content />
      </article>

      <aside class='space-y-8'>
        {
          technologies && technologies.length > 0 && (
            <div class='bg-gray-800/50 rounded-xl p-6 border border-gray-700/50'>
              <h3 class='text-lg font-semibold text-white mb-4 flex items-center gap-2'>
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  class='h-5 w-5 text-purple-400'
                  fill='none'
                  viewBox='0 0 24 24'
                  stroke='currentColor'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4'
                  />
                </svg>
                {copy.technologies}
              </h3>
              <div class='flex flex-wrap gap-2'>
                {technologies.map((tech) => (
                  <span class='px-3 py-1 text-sm bg-purple-500/10 text-purple-300 rounded-full border border-purple-500/20'>
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          )
        }

        {
          tags && tags.length > 0 && (
            <div class='bg-gray-800/50 rounded-xl p-6 border border-gray-700/50'>
              <h3 class='text-lg font-semibold text-white mb-4 flex items-center gap-2'>
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  class='h-5 w-5 text-blue-400'
                  fill='none'
                  viewBox='0 0 24 24'
                  stroke='currentColor'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z'
                  />
                </svg>
                {copy.tags}
              </h3>
              <div class='flex flex-wrap gap-2'>
                {tags.map((tag) => (
                  <span class='px-3 py-1 text-sm bg-blue-500/10 text-blue-300 rounded-full border border-blue-500/20'>
                    #{tag}
                  </span>
                ))}
              </div>
            </div>
          )
        }

        {
          highlights && highlights.length > 0 && (
            <div class='bg-gray-800/50 rounded-xl p-6 border border-gray-700/50'>
              <h3 class='text-lg font-semibold text-white mb-4 flex items-center gap-2'>
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  class='h-5 w-5 text-yellow-400'
                  fill='none'
                  viewBox='0 0 24 24'
                  stroke='currentColor'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M13 10V3L4 14h7v7l9-11h-7z'
                  />
                </svg>
                {copy.highlights}
              </h3>
              <ul class='space-y-3'>
                {highlights.map((highlight) => (
                  <li class='flex items-start gap-2 text-gray-300'>
                    <svg
                      xmlns='http://www.w3.org/2000/svg'
                      class='h-5 w-5 text-green-400 shrink-0 mt-0.5'
                      fill='none'
                      viewBox='0 0 24 24'
                      stroke='currentColor'
                    >
                      <path
                        stroke-linecap='round'
                        stroke-linejoin='round'
                        stroke-width='2'
                        d='M5 13l4 4L19 7'
                      />
                    </svg>
                    {highlight}
                  </li>
                ))}
              </ul>
            </div>
          )
        }
      </aside>
    </div>
  </section>
</main>
