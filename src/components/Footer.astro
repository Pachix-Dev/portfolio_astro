---

<footer id='contact' class='bg-gray-900 border-t border-gray-800'>
  <div class='max-w-6xl mx-auto px-4 py-12'>
    <!-- Main Footer Content -->
    <div class='flex justify-between gap-8 mb-12'>
      <!-- About Section -->
      <div class=''>
        <h3 class='text-2xl font-bold text-white mb-4'>{t.letscreate}</h3>
        <p class='text-gray-400'>
          <span>{t.start}</span>
          <a
            href='mailto:hola@yapura.dev'
            class='text-purple-400 hover:text-purple-300 transition-colors ml-1 underline'
          >
            {t.sayhi}
          </a>
        </p>
      </div>

      <!-- Navigation Links -->
      <div>
        <nav>
          <ul class='space-y-2'>
            {
              menuItems.map((item) => (
                <li>
                  <a
                    href={`#${item.key}`}
                    class='text-gray-400 hover:text-purple-400 transition-colors'
                  >
                    {item.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class='pt-8 border-t border-gray-800'>
      <div class='flex flex-col md:flex-row justify-between items-center gap-4'>
        <p
          class='text-gray-400 text-sm text-center md:text-left flex gap-2 items-center'
        >
          <a
            href={getRoute(locale, 'home')}
            class='text-xl lg:text-2xl font-bold text-white hover:text-purple-400 transition-colors flex items-center gap-2'
          >
            FYC
            <svg
              xmlns='http://www.w3.org/2000/svg'
              fill='none'
              viewBox='0 0 24 24'
              stroke-width='1.5'
              stroke='currentColor'
              class='size-6'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                d='M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 16.5'
              ></path>
            </svg>
          </a>
          {new Date().getFullYear()}
        </p>
        <div class='flex flex-wrap gap-4'>
          {
            socialLinks.map((social) => (
              <a
                href={social.url}
                rel='noopener noreferrer'
                target='_blank'
                aria-label={social.name}
                class='text-gray-400 hover:text-violet-600 transition-colors'
              >
                <svg
                  class='w-6 h-6'
                  fill='currentColor'
                  viewBox='0 0 24 24'
                  xmlns='http://www.w3.org/2000/svg'
                >
                  <path d={social.icon} />
                </svg>
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</footer>
